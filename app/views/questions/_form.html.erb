<%= form_for @question do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control content_area', rows: 15, required: true %>
  </div>
  
  <%= f.submit "#{action}", class: 'btn btn-default' %>
 
<% end %>